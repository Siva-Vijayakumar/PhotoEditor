<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Image Editor</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <!-- Company logo -->
    <div class="logo-wrapper">
      <img src="SILO.jpg" alt="Company Logo" class="company-logo">
    </div>

    <!-- Image Editor heading -->
    <h1 class="image-editor-heading">Image Editor</h1>
    
    <!-- Form to upload image -->
    <form id="uploadForm" action="/upload" method="post" enctype="multipart/form-data">
      <input type="file" name="image" accept="image/*" required>
      <button type="submit">Upload Image</button>
    </form>
    
    <% if (imageUrl) { %>
      <!-- Image editing section -->
      <div id="imageEditingSection">
        <!-- Display the uploaded image -->
        <div id="imageContainer">
          <img id="image" src="<%= imageUrl %>" alt="Uploaded Image">
        </div>

        <!-- Adjusted image preview -->
        <div id="preview">
          <h3 class="preview-heading">Preview</h3>
          <img id="previewImage" src="" alt="Adjusted Image">
        </div>

        <!-- Controls for adjusting image -->
        <div id="controls">
          <label for="contrast">Contrast:</label>
          <input type="range" id="contrast" name="contrast" min="0" max="2" step="0.1" value="1">
          
          <label for="brightness">Brightness:</label>
          <input type="range" id="brightness" name="brightness" min="0" max="2" step="0.1" value="1">
          
          <label for="saturation">Saturation:</label>
          <input type="range" id="saturation" name="saturation" min="0" max="2" step="0.1" value="1">
          
          <label for="hue">Hue:</label>
          <input type="range" id="hue" name="hue" min="0" max="360" step="1" value="0">
          
          <button id="saveButton">Save Image</button>
        </div>
      </div>
    <% } %>
  </div>

  <!-- Include script.js file -->
  <script src="/script.js"></script>
</body>
</html>
